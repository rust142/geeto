{
  "name": "@geeto/core",
  "version": "1.0.0",
  "description": "Git flow automation CLI tool with AI-powered branch naming using Gemini API",
  "author": "Your Name",
  "license": "MIT",
  "bin": {
    "geeto": "./lib/index.js"
  },
  "files": [
    "lib",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc && chmod +x ./lib/index.js",
    "dev": "tsc --watch",
    "start": "./lib/index.js",
    "clean": "rm -rf lib",
    "prebuild": "bun run clean",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "lint:md": "markdownlint \"**/*.md\" --ignore node_modules",
    "lint:md:fix": "markdownlint \"**/*.md\" --ignore node_modules --fix",
    "format": "prettier --write \"src/**/*.{ts,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,json,md}\"",
    "commitlint": "commitlint --edit",
    "geeto:build": "bun build --compile --minify --sourcemap lib/index.js --outfile geeto",
    "geeto:build:linux": "bun build --compile --minify --target=bun-linux-x64 lib/index.js --outfile geeto-linux",
    "geeto:build:windows": "bun build --compile --minify --target=bun-windows-x64 lib/index.js --outfile geeto-windows.exe",
    "geeto:build:mac": "bun build --compile --minify --target=bun-darwin-x64 lib/index.js --outfile geeto-mac",
    "geeto:build:all": "bun run geeto:build:linux && bun run geeto:build:windows && bun run geeto:build:mac",
    "release": "release-it",
    "release:minor": "release-it minor",
    "release:major": "release-it major",
    "release:patch": "release-it patch",
    "release:beta": "release-it --preRelease=beta",
    "release:alpha": "release-it --preRelease=alpha",
    "prepare": "husky install",
    "postinstall": "bun run prepare"
  },
  "keywords": [
    "git",
    "flow",
    "automation",
    "gemini",
    "ai",
    "branch-naming",
    "trello",
    "cli"
  ],
  "devDependencies": {
    "@commitlint/cli": "^19.0.0",
    "@commitlint/config-conventional": "^19.0.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.1.1",
    "@types/bun": "latest",
    "@types/node": "^20",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-security": "^2.1.1",
    "eslint-plugin-unicorn": "^51.0.1",
    "@release-it/conventional-changelog": "^8.0.0",
    "husky": "^9.0.0",
    "markdownlint-cli": "^0.47.0",
    "prettier": "^3.2.5",
    "release-it": "^17.0.0",
    "typescript": "^5"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "dependencies": {
    "geeto": "."
  }
}
